{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/js",
    "allowJs": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "typeRoots": [ "node_modules/@types" ],
  "include": [
    "sources/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}